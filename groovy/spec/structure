--------------------------------------------------------------------------------
Package names
--------------------------------------------------------------------------------
package mypackage
--------------------------------------------------------------------------------


--------------------------------------------------------------------------------
Imports
--------------------------------------------------------------------------------
import mypackage.MyClass
--------------------------------------------------------------------------------

--------------------------------------------------------------------------------
Default imports
--------------------------------------------------------------------------------
java.lang.*
java.util.*
java.io.*
java.net.*
groovy.lang.*
groovy.util.*
java.math.BigInteger
java.math.BigDecimal
--------------------------------------------------------------------------------

--------------------------------------------------------------------------------
Star Import
--------------------------------------------------------------------------------
import mypackage.*
--------------------------------------------------------------------------------

--------------------------------------------------------------------------------
Static import
--------------------------------------------------------------------------------
import static MyClass.mySomething
import static mypackage.MyClass.mySomething
--------------------------------------------------------------------------------

--------------------------------------------------------------------------------
Static import aliasing
--------------------------------------------------------------------------------
import static myimport as myalias
--------------------------------------------------------------------------------

--------------------------------------------------------------------------------
Static star import
--------------------------------------------------------------------------------
import static java.lang.Math.*
--------------------------------------------------------------------------------

--------------------------------------------------------------------------------
Import aliasing
--------------------------------------------------------------------------------
import java.sql.Date as SQLDate
--------------------------------------------------------------------------------

--------------------------------------------------------------------------------
Scripts to classes conversion
--------------------------------------------------------------------------------
import org.codehaus.groovy.runtime.InvokerHelper
class Main extends Script {                     
    def run() {                                 
        println 'Groovy world!'                 
    }
    static void main(String[] args) {           
        InvokerHelper.runScript(Main, args)     
    }
}
--------------------------------------------------------------------------------

--------------------------------------------------------------------------------
Methods
--------------------------------------------------------------------------------
import org.codehaus.groovy.runtime.InvokerHelper
class Main extends Script {
    int power(int n) { 2** n}                   
    def run() {
        println 'Hello'                         
        println "2^6==${power(6)}"              
    }
    static void main(String[] args) {
        InvokerHelper.runScript(Main, args)
    }
}
--------------------------------------------------------------------------------

--------------------------------------------------------------------------------
Variables
--------------------------------------------------------------------------------
int x = 1 // local variable in the run method
y = 2 // script binding
@Field z = 3 // field in the script class with no binding
--------------------------------------------------------------------------------
